<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Design.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">#F2F2F2</item>
    </style>

    <!-- Basic styling for the buttons. -->
    <style name="Chronometer" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/azul_muy_oscuro</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">48sp</item>
        <item name="android:background">#00000000</item>
    </style>

    <style name="boton_iniciar">
        <item name="android:textColor">@color/azul_muy_oscuro</item>
        <item name="android:background">@drawable/header</item>
        <item name="android:textSize">30dp</item>
    </style>
    <style name="HeaderActividades">
        <item name="android:textColor">@color/azul_oscuro</item>
        <item name="android:background">@drawable/header</item>
    </style>
    <style name="ItemActividades">
        <item name="android:textColor">@color/azul_muy_oscuro</item>
        <item name="android:background">@drawable/item_actividad</item>
    </style>


    <style name="fondo_transparente">
        <item name="android:background">#00000000</item>
    </style>
    <style name="ItemNombreTexto" parent="fondo_transparente">
        <item name="android:textColor">@color/azul_muy_oscuro</item>
    </style>
    <style name="ItemTexto" parent="fondo_transparente">
        <item name="android:textColor">@color/azul_oscuro</item>
    </style>

</resources>
